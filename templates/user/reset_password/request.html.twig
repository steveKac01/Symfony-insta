{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	- Reset password
{% endblock %}

{% block content %}
	{% for flash_error in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<div class="container my-4 form-control">
		<h1>Forgot your password ?</h1>
		<p>Don't worry it also happen to the very best of us.</p>


		{{ form_start(requestForm) }}

       <div> <i class="fa fa-envelope"></i> {{ form_label(requestForm.email) }}</div>
        {{ form_widget(requestForm.email) }}
     
 
		<div class="my-4">
            <small>{{ form_help(requestForm.email) }}</small>
		</div>

		<button class="btn btn-primary">Reset password</button>
		{{ form_end(requestForm) }}

	</div>
{% endblock %}
