{% extends "base.html.twig" %}
{% block title %}
	{{parent()}}
	- Register
{% endblock %}
{% block content %}
	<div class="container my-5 form-control">

		{% for message in app.flashes('warning') %}
			<div class="alert alert-warning">
				<i class="fa-solid fa-circle-exclamation"></i>
				{{message}}
			</div>
		{% endfor %}

		<h1>
			Delete your account :
		</h1>

		{{ form_start(form) }}
		{{ form_widget(form) }}
		{{ form_end(form) }}

	</div>
{% endblock %}