{% extends "base.html.twig" %}
{% block title %}
	{{parent()}}
	- My profile
{% endblock %}

{% block content %}



	{% for message in app.flashes('warning') %}
		<div class="alert alert-warning">
			<i class="fa-solid fa-circle-exclamation"></i>	{{message}}
		</div>
	{% endfor %}

	<div class="container my-5">
		<h1>
			{{app.user.pseudo}}'s account</h1>
		
		{# Update time #}
		{% if app.user.updatedAt != null %}
			<small>Your profil has been updated on {{app.user.updatedAt|date('m/d/Y')}} at {{app.user.updatedAt|date('H:i')}}</small>
		{% endif %}

		{{ form_start(form) }}
		{{ form_widget(form) }}
		{{ form_end(form) }}

	</div>
{% endblock %}
